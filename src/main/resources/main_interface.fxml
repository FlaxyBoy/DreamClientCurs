<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.dream.chat.window.controllers.MainInterfaceController">
    <TextArea fx:id="mainArena" editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="msgField" onAction="#onSend" promptText="Enter message...." style="-fx-border-width: 0px 0px 2px 0px; -fx-border-color: #ad18a9; -fx-background-color: #eb34e5; -fx-text-fill: #000000" HBox.hgrow="ALWAYS" />
        <Button maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" onAction="#onSend" style="-fx-background-color: #ad18a9;" text="Send" HBox.hgrow="ALWAYS" />
    </HBox>


</VBox>
